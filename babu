  <script>
    const shayaris = [
      "🌹 'Aap ki muskurahat meri pehchaan hai,<br> Aap ki khushi meri jaan hai.'",
      "💖 'Tumhari har baat mere dil ko chhoo jaati hai,<br> Palak ji, aap meri har dua mein shaamil ho.'",
      "✨ 'Chand taaron mein roshni tumse hai,<br> Har khushi meri tumse hai.'",
      "💕 'Tum ho toh sab kuch hai,<br> Tum na ho toh kuch bhi nahi.'",
      "🌷 'Zindagi mein aayi ho tum ek bahar banke,<br> Palak ji, har din lagta hai pyaar banke.'",
      "🎶 'Har pal sirf tumhara intezaar hai,<br> Kyunki tum ho toh sab kuch yaar hai.'"
    ];

    function revealShayari(box, index) {
      const content = box.querySelector('.shayari');
      content.innerHTML = shayaris[index];
      content.style.display = 'block';
      createHearts();
    }

    function createHearts() {
      const hearts = document.getElementById('hearts');
      for (let i = 0; i < 15; i++) {
        const heart = document.createElement('div');
        heart.classList.add('heart');
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.animationDuration = 4 + Math.random() * 4 + 's';
        heart.style.backgroundColor = ['#ff4d6d', '#ff6699', '#ff9999'][Math.floor(Math.random() * 3)];
        hearts.appendChild(heart);
        setTimeout(() => heart.remove(), 9000);
      }
    }
  </script>

